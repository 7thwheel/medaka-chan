<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="borderPane" styleClass="root, body" xmlns:fx="http://javafx.com/fxml" fx:controller="seventhwheel.pos.controller.PosController">
  <center>
    <StackPane id="bodyPos" fx:id="stackPane">
      <children>
        <VBox fx:id="bodyPos" spacing="10.0">
          <children>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0">
              <children>
                <Button id="btnRegistItem" fx:id="btnRegisterItem" mnemonicParsing="false" onAction="#handleBtnRegisterItem" text="商品登録画面へ" />
              </children>
              <VBox.margin>
                <Insets />
              </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="3.0" styleClass="box">
              <children>
                <TextField fx:id="txtQuantity" alignment="CENTER" prefWidth="60.0" promptText="個数" />
                <Label text="個" />
                <TextField id="BarCode" fx:id="txtBarCode" onAction="#handleTxtBarCodeAction" prefWidth="399.9998779296875" promptText="バーコードを読み込んでください" />
                <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleBtnClearAction" text="クリア" />
              </children>
            </HBox>
            <VBox styleClass="box" VBox.vgrow="ALWAYS">
              <children>
                <TableView fx:id="table" VBox.vgrow="ALWAYS">
                  <columns>
                    <TableColumn minWidth="100.0" prefWidth="300.0" text="商品名" fx:id="colItemName" />
                    <TableColumn prefWidth="100.0" text="単価" fx:id="colPrice" />
                    <TableColumn prefWidth="100.0" text="個数" fx:id="colQuantity" />
                    <TableColumn prefWidth="75.0" text="金額" fx:id="colAmount" />
                  </columns>
                </TableView>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </StackPane>
  </center>
  <stylesheets>
    <URL value="@../css/pos.css" />
  </stylesheets>
</BorderPane>
