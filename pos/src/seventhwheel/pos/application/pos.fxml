<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="borderPane" styleClass="root, body" xmlns:fx="http://javafx.com/fxml" fx:controller="seventhwheel.pos.controller.PosController">
  <center>
    <StackPane id="bodyPos" fx:id="stackPane">
      <children>
        <VBox fx:id="bodyPos" spacing="10.0">
          <children>
            <HBox alignment="CENTER_LEFT" spacing="3.0" styleClass="box">
              <children>
                <TextField id="BarCode" fx:id="txtBarCode" onAction="#handleTxtBarCodeAction" prefWidth="399.9998779296875" promptText="バーコードを読み込んでください" />
                <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleBtnClearAction" styleClass="clear-button" text="クリア" />
              </children>
            </HBox>
            <VBox id="" spacing="3.0" styleClass="box" VBox.vgrow="ALWAYS">
              <children>
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                  <children>
                    <Label text="合計金額" />
                    <Label fx:id="lblTotalAmount" alignment="CENTER_RIGHT" prefWidth="90.0" text="0" />
                    <Label text="円" />
                    <BorderPane HBox.hgrow="ALWAYS">
                      <left>
                        <Button fx:id="btnRegister" focusTraversable="false" mnemonicParsing="false" onAction="#handleBtnRegisterAction" styleClass="register-button" text="次の会計" />
                      </left>
                      <padding>
                        <Insets left="10.0" />
                      </padding>
                      <right>
                        <Button fx:id="btnCancel" focusTraversable="false" mnemonicParsing="false" onAction="#handleBtnCancelAction" styleClass="cancel-button" text="中止" />
                      </right>
                    </BorderPane>
                  </children>
                  <padding>
                    <Insets bottom="5.0" />
                  </padding>
                </HBox>
                <TableView fx:id="table" VBox.vgrow="ALWAYS">
                  <columns>
                    <TableColumn minWidth="100.0" prefWidth="300.0" text="商品名" fx:id="colItemName" />
                    <TableColumn prefWidth="100.0" text="単価" fx:id="colPrice" />
                    <TableColumn prefWidth="100.0" text="個数" fx:id="colQuantity" />
                    <TableColumn prefWidth="75.0" text="金額" fx:id="colAmount" />
                  </columns>
                </TableView>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </StackPane>
  </center>
  <stylesheets>
    <URL value="@../css/pos.css" />
  </stylesheets>
</BorderPane>
